/*头像*/

.touxiang {
  text-align: center;
  width: 100%;
  height: 200rpx;
  padding: 100rpx 0;
  background: #fff;
}

.touxiang image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

/*余额*/

.bag {
  height: 99rpx;
  border-bottom: 5rpx solid #ccc;
  border-top: 5rpx solid #ccc;
  margin: 0 15rpx 0 30rpx;
}

.bag image {
  width: 45rpx;
  height: 45rpx;
  padding: 27rpx 30rpx;
  float: left;
}

.bag text {
  padding: 27rpx 0;
  float: left;
}

.bag > image:nth-child(3) {
  width: 45rpx;
  height: 45rpx;
  float: right;
  padding: 12px 0;
}

