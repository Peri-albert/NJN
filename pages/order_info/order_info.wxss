/* pages/order_info/order_info.wxss */
.section {
  color: #fafafa;
  height: 100%;
}

.time {
  text-align: centre;
  width: 100%;
  margin-top: 200rpx;
  color: #3888ff;
}

.time .time-left {
  width: 423rpx;
  margin: auto;
  border: 10rpx solid #3888ff;
  border-radius: 20rpx;
}

.time .time-left > image {
  width: 84rpx;
  height: 150rpx;
  padding: 10rpx 0 0rpx 10rpx;
}

.time .time-left image:nth-child(3) {
  width: 27rpx;
}

.time-text {
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
}


.order {
  height: 200rpx;
  width: 100%;
  background: #434343;
  overflow: hidden;
}

.order_1{
  height: 200rpx;
}

.order_1 > view {
  height: 150rpx;
  float: left;
  padding-top: 25rpx;
}

.order_1_bill {
  width: 30%;
  margin-left: 5%;
  color: #3888ff;
}

.cost_1 text {
  color: #fff;
  font-size: 35rpx;
}

.cost_2 text {
  color: #3888ff;
  font-size: 60rpx;
  margin-left: -15rpx;
}

.order_1_err {
  width: 30%;
  text-align: center;
}

.order_1_err image {
  width: 135rpx;
  height: 135rpx;
}

.order_1_umbnum {
  width: 30%;
  margin-left: 5%;
}

.num_1 text {
  color: #fff;
  margin-top: 10rpx;
  font-size: 35rpx;
}

.num_2 text {
  color: #3888ff;
  font-size: 60rpx;
  margin-top: 25rpx;
}

.detail{
  height: 50%;
}

.timecost {
  margin-left: 5%;
  width: 95%;
  color: #fff;
  font-size: 30rpx;
  margin-top: 1rpx;
  height: 50rpx;
}

.timecost text:first-child {
  float: left;
}

.timecost text:nth-child(2) {
  float: right;
  margin-right: 2%;
}

.start_time {
  margin-left: 5%;
  width: 95%;
  color: #fff;
  font-size: 30rpx;
  height: 50rpx;
}

.start_time text:first-child {
  float: left;
}

.start_time text:nth-child(2) {
  float: right;
  margin-right: 3%;
}

.end_time {
  margin-left: 5%;
  width: 95%;
  color: #fff;
  font-size: 30rpx;
  height: 50rpx;
}

.end_time text:first-child {
  float: left;
}

.end_time text:nth-child(2) {
  float: right;
  margin-right: 3%;
}

.cost_detail {
  text-align: center;
  color: #fafafa;
  font-size: 35rpx;
  margin-top: 5rpx;
}

.button {
  text-align: center;
  left: 250rpx;
  height: 58rpx;
}

.button image {
  height: 58rpx;
  width: 240rpx;
}
.box{
  position: absolute;
  width: 100%;
  bottom: 0px;
}

.padding-area{
  color: #434343;
  bottom: -10rpx;
  position: absolute;
  height: 20rpx;
}

@keyframes up{
  from  {height: 200rpx;}
  to  {height: 420rpx;}
}

@keyframes down{
  from  {height: 420rpx;}
  to  {height: 200rpx;}
}