.logo {
  text-align: center;
  width: 100%;
  height: 200rpx;
  padding: 100rpx 0;
  background: #ffffff;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20px;
}

.gzh {
    border-top: 5rpx solid #ccc;
}

.menu navigator view {
  height: 99rpx;
  border-bottom: 5rpx solid #ccc;
  margin: 0 15rpx 0 30rpx;
}

.menu navigator view image {
  width: 45rpx;
  height: 45rpx;
  padding: 27rpx 30rpx;
  float: left;
}

.menu navigator view text:nth-child(2) {
  padding: 27rpx 0;
  float: left;
}

.menu navigator view text:nth-child(3) {
  padding: 31rpx 15rpx;
  float: right;
  font-size: 0.8em;
}
